/**
 * Implemntes hook_field_formatter_view();
 * 
 */
function link_field_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();
  switch ($display['type']) {
    case 'link_formatter':
      foreach ($items as $delta => $item) {
        $element[$delta] = array(
          '#markup' => _link_formater_callback($item),
        );
      }
      break;
  }
  return $element;
}

